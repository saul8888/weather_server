<!DOCTYPE html>
<html>

  <body>
    <div class="container">
      <fieldset>
        <form action="/" method="post">
          <input name="tienda" type="text" class="ghost-input" placeholder="Enter a Store" required>
          <input type="submit" class="ghost-button" value="Get Weather">
        </form>
        <% if(weather !== null){ %>
          <p><%= weather %></p>
        <% } %>

        <% if(error !== null){ %>
          <p><%= error %></p>
        <% } %>
      </fieldset>
    </div>
  </body>
</html>
